{
    "compilerOptions": {
      "target": "ES2018",
      "module": "CommonJS",
      "lib": ["es2018"],
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "types": ["node", "aws-cdk-lib"]
    },
    "include": ["bin/**/*.ts", "lib/**/*.ts"],
    "exclude": ["node_modules"]
  }
  